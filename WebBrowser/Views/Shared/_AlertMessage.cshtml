@if (TempData["message"] != null)
{
    var isSuccess = TempData["isSuccess"]?.ToString() == "True";
    <div class="alert @(isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert" id="alertBox">
        @TempData["message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <script>
        setTimeout(function () {
            var alertBox = document.getElementById('alertBox');
            if (alertBox) {
                var bsAlert = bootstrap.Alert.getOrCreateInstance(alertBox);
                bsAlert.close();
            }
        }, 3000);
    </script>
}
