@model List<CoreLib.Models.Department>

@{
    ViewData["Title"] = "Danh sách Phòng ban";
}
@await Html.PartialAsync("_AlertMessage")
<div class="container mt-4">
    <h2 class="mb-4 text-primary">Danh sách Phòng ban</h2>
    <form asp-action="SearchById" asp-controller="Department" method="get" class="mb-4 row g-2">
        @if (ViewBag.Role == "Admin")
        {
        <div class="col-auto">
            <input type="number" name="id" class="form-control" placeholder="Nhập mã phòng ban" required />
        </div>
      
        
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
        }
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Mã phòng</th>
                    <th>Tên phòng</th>
                    <th>Trưởng phòng</th>
                    <th>Ngày nhận chức</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dept in Model)
                {
                    <tr>
                        <td>@dept.MAPHG</td>
                        <td>@dept.TENPHG</td>
                        <td>@dept.TRPHG</td>
                        <td>@dept.NG_NHANCHUC.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">Không có phòng ban nào được tìm thấy.</div>
    }
</div>