@model List<CoreLib.Dtos.HistoryDto>

@{
    ViewData["Title"] = "Lịch sử dự án của nhân viên";
}

<h2>@ViewData["Title"]</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Không có dữ liệu lịch sử cho nhân viên này.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Mã nhân viên</th>
                <th>Họ tên</th>
                <th>Số dự án</th>
                <th>Tên dự án</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MANV</td>
                    <td>@item.HO_TEN</td>
                    <td>@item.SODA</td>
                    <td>@item.TENDA</td>
                </tr>
            }
        </tbody>
    </table>
}
